<h2>Update the drone</h2>

<form action="/drones/{{id}}/edit" class="form" method="POST">

<div>
    <label>Name:</label>
    <input type="text" name="name" value="{{name}}">
</div>

<div>
    <label>Propellers:</label>
    <input type="number" name="propellers" value="{{propellers}}">
</div>
    
    <div>
        <label>Speed:</label>
    <input type="number" name="maxSpeed" value="{{maxSpeed}}">
    </div>
    
    <button type="submit">Edit</button>

</form>